<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bug Dictionary - <%= username %>
    </title>
    <%- include('./layouts/imports') %>
</head>

<body>
    <%- include('./layouts/navbar') %>
        <div class="container-md">
            <div class="row">
                <div class="col-xl-3 col-sm-4">
                    <div class="bg-white w-100 d-sm-none d-block position-fixed start-0 end-0 p-2">
                        <button onclick="onClickMenu()" id="menu-btn" class="btn btn-primary w-100 mx-auto">Menu <i class="fa-solid fa-bars ps-2"></i></button>
                    </div>
                    <nav id="user-menu" class="w-100 bg-white mt-sm-0 mt-5 sidebar d-flex flex-column p-3 border-end my-2 d-sm-block d-none">
                        <a href="/users/<%= username %>"
                            class="sidebar-link d-flex align-items-center justify-content-between">
                            <% if(currentPath=='/users/' + username){ %>
                                <p class="fs-5 sidebar-active sidebar-text"># Profile</p>
                                <p class="fs-5 sidebar-active sidebar-arrow d-md-block d-none">--></p>
                                <% }else{ %>
                                    <p class="fs-5 sidebar-text"># Profile</p>
                                    <p class="fs-5 sidebar-arrow d-md-block d-none">--></p>
                                    <% } %>
                        </a>
                        <a href="/users/<%= username %>/entries"
                            class="sidebar-link d-flex align-items-center justify-content-between">
                            <% if(currentPath=='/users/' + username +'/entries'){ %>
                                <p class="fs-5 sidebar-active sidebar-text"># Entries</p>
                                <p class="fs-5 sidebar-active sidebar-arrow d-md-block d-none">--></p>
                                <% }else{ %>
                                    <p class="fs-5 sidebar-text"># Entries</p>
                                    <p class="fs-5 sidebar-arrow d-md-block d-none">--></p>
                                    <% } %>
                        </a>
                        <% if(currentUser.role==="admin" ){ %>
                            <a href="/users/<%= currentUser.username %>/admin"
                                class="sidebar-link d-flex align-items-center justify-content-between">
                                <% if(currentPath=='/users/' +currentUser.username+'/admin'){ %>
                                    <p class="fs-5 sidebar-active sidebar-text"># Admin Panel</p>
                                    <p class="fs-5 sidebar-active sidebar-arrow d-md-block d-none">--></p>
                                    <% }else{ %>
                                        <p class="fs-5 sidebar-text"># Admin Panel</p>
                                        <p class="fs-5 sidebar-arrow d-md-block d-none">--></p>
                                        <% } %>
                            </a>
                            <% } %>
                    </nav>
                </div>
                <div class="col-xl-9 col-sm-8">
                    <div class="py-5 mt-sm-0 mt-5">
                        <div class="d-flex justify-content-center my-2 ">
                        <i class="fa-solid fa-user-astronaut avatar rounded-circle p-2 "></i>
                    </div>
                        <h3 class="text-center">@<%= username %> </h3>
                        <h5 class="text-muted text-center"><%= rank %> (<%= point %>) </h5>
                        <% if(rank === 'Junior'){ %>
                            <div class="progress levelbar mt-4 mx-auto">
                                <div class="progress-bar bg-primary" role="progressbar" style="width: <%= (point-100)/4 %>%"></div>
                            </div>
                            <% }else if(rank === 'Senior'){ %>
                        <div class="progress levelbar mt-4 mx-auto">
                            <div class="progress-bar bg-warning" role="progressbar" style="width:100%"></div>
                        </div>
                        <% }else{ %>
                            <div class="progress levelbar mt-4 mx-auto">
                                <div class="progress-bar bg-success" role="progressbar" style="width: <%= point %>%"></div>
                            </div>
                            <% } %>
                        <div class="d-flex levelbar mx-auto justify-content-center py-3">
                            <a class="link px-2" href="/users/ <%= username %> /entries">
                                Entries : <%= entryCount %>
                            </a>
                            -
                            <p class="px-2">
                            <%= locals.moment(user.dataValues.createdAt).format('DD.MM.YYYY') %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('./layouts/footer') %>
        <script>
            const onClickMenu=()=>{
                console.log('clicked');
                const menu=document.getElementById('user-menu');
                var exists=menu.classList.contains('d-none');
                if(exists){
                    menu.classList.remove('d-none');
                }else{
                    menu.classList.add('d-none');
                }
            };
        </script>
</body>

</html>